# Database (use Cloud SQL connection string in production)
DATABASE_URL="postgresql://user:password@localhost:5432/school_admission"

# Auth
JWT_SECRET="change-this-to-a-random-secret-key"

# Optional: Firebase OTP (set GOOGLE_APPLICATION_CREDENTIALS to service account JSON path)
FIREBASE_PROJECT_ID="your-firebase-project-id"
MOCK_OTP="true"

# Server (Cloud Run uses PORT=8080 by default)
PORT=3001
NODE_ENV="development"

# File storage: leave unset for local disk; set for Google Cloud Storage (production)
# GCS_BUCKET="your-bucket-name"
# Optional for local: base path for uploads/pdfs (default: process.cwd())
# STORAGE_BASE="."

# CORS (production): allow admin and mobile origins
# ADMIN_ORIGIN="https://admin.yourdomain.com"
# MOBILE_ORIGIN=""

# Payments (Razorpay)
# RAZORPAY_KEY_ID=""
# RAZORPAY_KEY_SECRET=""

# AI
OPENAI_API_KEY="your-openai-api-key"

# Legacy (ignored when using storage service; kept for reference)
# UPLOAD_DIR="./uploads"
# PDF_DIR="./pdfs"
